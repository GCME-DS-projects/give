{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@give/source"],
    "baseUrl": ".",                         // <-- add this
    "paths": {
      "@shared/src/*": ["./shared/src/*"],
      "@give/shared/ui": ["./shared/src/index.ts"],
      "@give/shared/*": ["shared/src/*"],
      "src/*": ["./shared/src/*"]
    }
  }
}
