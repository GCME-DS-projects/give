{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@give/source"],
    "baseUrl": ".",                         
    "paths": {
      "@give/shared/*": ["./shared/src/*"],
      "@give/shared/lib/utils": ["./shared/src/lib/utils.ts"],
      "@give/shared/lib/*": ["./shared/src/lib/*"],      
      "@give/shared/ui": ["./shared/src/index.ts"]
    }
  }
}
