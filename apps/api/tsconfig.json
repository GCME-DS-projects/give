{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "./src",
    "baseUrl": "./src",             // <-- important for non-relative imports
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@give/shared/*": ["../../shared/src/*"],
      "@give/shared/lib/utils": ["../../shared/src/lib/utils.ts"],
      "@give/shared/ui": ["../../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
